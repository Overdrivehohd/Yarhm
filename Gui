-- Make sure to require the Orion UI Library (assuming you've added it to the game)
local OrionLib = require(game:GetService("ReplicatedStorage"):WaitForChild("Orion"));

-- Create a window
local Window = OrionLib:MakeWindow({
    Name = "Fake Robux Generator", 
    HidePremium = true, 
    IntroEnabled = false,
    SaveConfig = true,
    ConfigFolder = "OrionFakeRobuxGUI"
});

-- Create a Fake Robux Amount Label
local RobuxAmountLabel = Instance.new("TextLabel")
RobuxAmountLabel.Size = UDim2.new(0, 300, 0, 50)
RobuxAmountLabel.Position = UDim2.new(0.5, -150, 0, 30)
RobuxAmountLabel.Text = "You have 0 Robux!"
RobuxAmountLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
RobuxAmountLabel.TextSize = 24
RobuxAmountLabel.BackgroundTransparency = 1
RobuxAmountLabel.Parent = game.Players.LocalPlayer.PlayerGui

-- Create a button in the Orion UI
local FakeRobuxButton = Window:MakeButton({
    Name = "Generate Fake Robux", 
    Callback = function()
        -- Simulate generating fake Robux
        local fakeRobux = math.random(1000, 10000)  -- Random amount of fake Robux
        RobuxAmountLabel.Text = "You have " .. fakeRobux .. " Robux!"  -- Update the text on the label
    end
});

-- This script will create the UI window and simulate the Robux generation when clicked.
