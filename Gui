-- Import the Orion UI library
local OrionLib = require(game:GetService("ReplicatedStorage"):WaitForChild("Orion"))

-- Create a window with Orion UI
local Window = OrionLib.New("Fake MM2 Item Spawner")

-- Add a button to the window
local button = Window:MakeButton({
    Name = "Spawn Fake Item", 
    Text = "Spawn Fake Item", 
    Callback = function()
        -- Spawn a fake item when the button is clicked
        spawnFakeItem()
    end
})

-- Function to spawn a fake item (like a knife or sword)
local function spawnFakeItem()
    local player = game.Players.LocalPlayer
    local mouse = player:GetMouse()
    
    -- Create a fake item (a simple part to represent the weapon)
    local fakeItem = Instance.new("Part")
    fakeItem.Size = Vector3.new(2, 1, 1)  -- Size it like a sword or knife
    fakeItem.Position = mouse.Hit.p + Vector3.new(0, 5, 0)  -- Position it above the mouse position
    fakeItem.Anchored = true
    fakeItem.CanCollide = false
    fakeItem.BrickColor = BrickColor.new("Bright red")  -- Color it to look like a fake weapon
    fakeItem.Material = Enum.Material.Neon  -- Make it glow
    fakeItem.Parent = game.Workspace
    
    -- Optional: Add a handle for the weapon (like a knife handle)
    local handle = Instance.new("Part")
    handle.Size = Vector3.new(0.2, 3, 0.2)  -- Make it look like a handle
    handle.Position = fakeItem.Position + Vector3.new(0, -2, 0)  -- Position it below the item part
    handle.Anchored = true
    handle.CanCollide = false
    handle.BrickColor = BrickColor.new("Bright black")  -- Color for the handle
    handle.Material = Enum.Material.SmoothPlastic
    handle.Parent = fakeItem
    
    -- Optional: Add sound when spawning the fake item
    local sound = Instance.new("Sound")
    sound.SoundId = "rbxassetid://<your-sound-id>"  -- Replace with your sound asset ID
    sound.Parent = fakeItem
    sound:Play()
    
    -- Optional: Add a particle effect to the fake item
    local particleEmitter = Instance.new("ParticleEmitter")
    particleEmitter.Texture = "rbxassetid://<your-particle-texture-id>"  -- Replace with your particle texture ID
    particleEmitter.Parent = fakeItem
    
    -- Automatically remove the fake item after 5 seconds
    game.Debris:AddItem(fakeItem, 5)
end
